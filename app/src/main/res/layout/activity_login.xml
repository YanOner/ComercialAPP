<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trial"
    android:orientation="vertical"
    tools:context="com.upc.gmt.comercialgb.LoginActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <!--android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        app:srcCompat="@drawable/logo"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/textView_style"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:text="GESTIÓN COMERCIAL DE ASESORES DE VENTAS" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txtUsuario"
                        style="@style/editText_style"
                        android:layout_height="match_parent"
                        android:hint="Usuario"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:text="ASESOR01" />

                    <EditText
                        android:id="@+id/txtPassword"
                        style="@style/editText_style"
                        android:layout_height="match_parent"
                        android:hint="Contraseña"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:text="123456" />

                    <Button
                        android:layout_height="match_parent"
                        style="@style/button_style"
                        android:id="@+id/btnIngresar"
                        android:text="INICIAR SESIÓN"
                        android:onClick="onValidarIngreso" />

                    <EditText
                        android:id="@+id/txtIP"
                        style="@style/editText_style"
                        android:layout_height="match_parent"
                        android:hint="IP BACKEND"
                        android:inputType="text" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtRegistro"
                        style="@style/textView_style"
                        android:text="Regístrese"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textView"
                        style="@style/textView_style"
                        android:text="¿Olvidó su contraseña?"
                        android:visibility="invisible" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


