<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/trial"
    tools:context="com.upc.gmt.catalogo.BuscarClienteActivity">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Documento:" />

        <Spinner
            android:id="@+id/spnTipoDoc"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumeroDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃºmero de Documento:" />

        <EditText
            android:id="@+id/txtNumeroDoc"
            style="@android:style/Widget.Material.Light.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="55555555"
            android:imeOptions="actionDone"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBuscar"
        style="@style/button_style_pedido"
        android:layout_height="wrap_content"
        android:onClick="onClickBuscarCliente"
        android:text="       BUSCAR       " />

    <Button
        android:id="@+id/btnRegresar"
        style="@style/button_style_pedido"
        android:layout_height="wrap_content"
        android:onClick="onClickRegresar"
        android:text="     REGRESAR     " />

</LinearLayout>