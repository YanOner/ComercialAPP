<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trial"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.upc.gmt.comercialgb.MenuPrincipalActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAbrirCatalogo"
            style="@style/button_style"
            android:layout_height="wrap_content"
            android:onClick="onAbrirCatalogo"
            android:text="     CATÁLOGO DE CALZADOS     " />


        <Button
            android:id="@+id/btnSolicitarAumento"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onAumentoLinea"
            android:text="AUMENTAR LÍNEA DE CRÉDITO"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnPedidosPorPagar"
            style="@style/button_style"
            android:layout_height="wrap_content"
            android:text="     VER PEDIDOS POR PAGAR     "
            android:visibility="invisible" />

    </LinearLayout>
</LinearLayout>

